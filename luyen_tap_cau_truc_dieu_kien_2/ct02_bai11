<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Tính Thuế Thu Nhập Cá Nhân</title>
</head>
<body>
<h1>Tính Thuế Thu Nhập Cá Nhân</h1>

<form>
    <fieldset>
        <legend>Thông Tin Tính Thuế</legend>
        Thu nhập tính thuế (triệu đồng/tháng):
        <input type="number" id="income" step="0.1" min="0">
        <button type="button" onclick="calculate()">Tính Thuế</button>
    </fieldset>
</form>

<div id="result"></div>

<script>
    function calculate() {
        let income = parseFloat(document.getElementById("income").value);
        let resultDiv = document.getElementById("result");
        let tax = 0;

        if (isNaN(income) || income < 0) {
            resultDiv.innerHTML = "<b>Vui lòng nhập thu nhập hợp lệ!</b>";
            return;
        }

        if (income <= 5) {
            tax = income * 0.05;
        } else if (income <= 10) {
            tax = 5 * 0.05 + (income - 5) * 0.10;
        } else if (income <= 18) {
            tax = 5 * 0.05 + 5 * 0.10 + (income - 10) * 0.15;
        } else if (income <= 32) {
            tax = 5 * 0.05 + 5 * 0.10 + 8 * 0.15 + (income - 18) * 0.20;
        } else if (income <= 52) {
            tax = 5 * 0.05 + 5 * 0.10 + 8 * 0.15 + 14 * 0.20 + (income - 32) * 0.25;
        } else if (income <= 80) {
            tax = 5 * 0.05 + 5 * 0.10 + 8 * 0.15 + 14 * 0.20 + 20 * 0.25 + (income - 52) * 0.30;
        } else {
            tax = 5 * 0.05 + 5 * 0.10 + 8 * 0.15 + 14 * 0.20 + 20 * 0.25 + 28 * 0.30 + (income - 80) * 0.35;
        }

        resultDiv.innerHTML =
            `<h3>Thuế phải nộp: ${tax.toFixed(2)} triệu đồng</h3>` +
            `<p>Thu nhập sau thuế: <b>${(income - tax).toFixed(2)} triệu đồng</b></p>`;
    }
</script>
</body>
</html>
